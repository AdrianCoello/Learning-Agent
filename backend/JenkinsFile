pipeline {
    agent any

    environment {
        CI = 'true'
        NODE_ENV = 'production'
    DOCKER_IMAGE = "${DOCKERHUB_USER}/learning-agent-backend:${env.BUILD_NUMBER}"
        REGISTRY_CREDENTIALS = credentials('DOCKERHUB_CREDENTIALS')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build Docker image') {
            steps {
                dir('backend') {
                    sh 'docker -v && docker info'
                    sh 'echo "Directorio actual:" && pwd'
                    sh 'echo "Contenido actual:" && ls -la'
                    sh "docker build -t $DOCKER_IMAGE ."
                }
            }
        }
        stage('Push Docker image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'DOCKERHUB_CREDENTIALS', usernameVariable: 'DOCKERHUB_USER', passwordVariable: 'DOCKERHUB_PASS')]) {
                    sh '''
                        echo "$DOCKERHUB_PASS" | docker login -u "$DOCKERHUB_USER" --password-stdin
                        docker push $DOCKER_IMAGE
                    '''
                }
            }
        }
        // Optional: Uncomment to trigger Render deploy if you have the webhook
        // stage('Deploy to Render') {
        //   steps {
        //     echo 'Trigger deploy in Render (webhook or API call)'
        //     // Example:
        //     // sh 'curl -X POST https://api.render.com/deploy/srv-xxxxxx?key=YOUR_WEBHOOK_KEY'
        //   }
        // }
    }
}